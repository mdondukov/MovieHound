<resources>

    <!-- Base application theme. -->
    <style name="Theme.MovieHound" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.MovieHound.Pro">
        <item name="colorPrimary">@color/colorPrimaryPro</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkPro</item>
        <item name="colorAccent">@color/colorAccentPro</item>
    </style>

    <style name="Theme.MovieHound.NoActionBar" parent="">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MovieHound.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Widget.MovieHound.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Widget.MovieHound.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.MovieHound.BottomNavigationView" parent="">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Widget.MovieHound.ImageView" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Widget.MovieHound.LinearLayout.Blackout" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/padding_8</item>
        <item name="android:paddingBottom">@dimen/padding_8</item>
        <item name="android:paddingStart">@dimen/padding_4</item>
        <item name="android:paddingEnd">@dimen/padding_4</item>
    </style>

    <style name="Widget.MovieHound.Icon" parent="">
        <item name="android:layout_width">@dimen/ic_size</item>
        <item name="android:layout_height">@dimen/ic_size</item>
    </style>

    <style name="Widget.MovieHound.LinearLayout.Gradient" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/space_32</item>
        <item name="android:paddingBottom">@dimen/space_32</item>
        <item name="android:paddingStart">@dimen/padding_24</item>
        <item name="android:paddingEnd">@dimen/padding_24</item>
        <item name="android:background">@drawable/gradient_bg</item>
    </style>

    <style name="Widget.MovieHound.TextView.Title" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">@dimen/title</item>
    </style>

    <style name="Widget.MovieHound.Button" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_24</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_rounded_bg</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>

    <style name="Widget.MovieHound.Button.Exit" parent="">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_rounded_bg</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>

    <style name="Widget.MovieHound.Button.Exit.Outline" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.MovieHound.HintText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">@dimen/body</item>
    </style>

    <style name="Widget.MovieHound.EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlNormal">?android:attr/textColorPrimary</item>
        <item name="colorControlActivated">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/body</item>
    </style>

</resources>
